<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/width_cv_choises"
        android:layout_height="@dimen/height_cv_choises"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/cv_corner_choises"
        app:cardElevation="@dimen/shadow">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_nameChoises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_tv_choises"
                android:layout_marginEnd="@dimen/marginEnd_tv_chosies"
                android:text="طالب وجامعة"
                android:textSize="@dimen/tv_choises_sizeText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_choises"
                android:layout_width="@dimen/width_iv_choses"
                android:layout_height="@dimen/width_iv_choses"
                android:layout_marginLeft="@dimen/marginRight_iv_choises"
                android:layout_marginTop="@dimen/margintop_iv_choses"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>