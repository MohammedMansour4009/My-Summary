<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/collegesStrokeSize"
        app:cardElevation="@dimen/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/colleges_selector"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_colleges"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/ImageWidth"
                android:layout_height="@dimen/heigthCV"
                android:layout_marginTop="@dimen/marginTopIv"
                android:layout_marginBottom="@dimen/marginBottomiv"
                android:layout_marginRight="@dimen/margenEndIv"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_colleges"
                app:layout_constraintEnd_toStartOf="@id/iv_colleges"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopTv"
                android:layout_marginRight="@dimen/marginEndTv"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>