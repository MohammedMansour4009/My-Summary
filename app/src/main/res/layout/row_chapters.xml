<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="model"
    type="com.example.mysummary.model.home.Chapter" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/widthCvMatirial"
            android:layout_height="@dimen/heightCvMatirial"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/cornerCvMatirial"
            app:cardElevation="@dimen/shadow">

            <TextView
                android:id="@+id/tv_name_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{model.nameCourse}"
                android:textSize="@dimen/tv_sizeText_matirial" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>